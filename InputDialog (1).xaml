<Window x:Class="UnifiedApp.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить деталь" Height="200" Width="300">
    <Grid>
        <Label Content="Ширина:" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <TextBox x:Name="WidthBox" HorizontalAlignment="Left" Margin="80,10,0,0" Width="100"/>

        <Label Content="Высота:" HorizontalAlignment="Left" Margin="10,50,0,0"/>
        <TextBox x:Name="HeightBox" HorizontalAlignment="Left" Margin="80,50,0,0" Width="100"/>

        <Button Content="ОК" HorizontalAlignment="Right" Margin="0,100,10,0" Width="75"
                Click="OKButton_Click"/>
    </Grid>
</Window>
